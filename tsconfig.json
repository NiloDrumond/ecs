{
  "extends": "./tsconfig.paths.json",
  "include": ["app/src", "app/src/@types"],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true
  }
}
